<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました。
  <% @book.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
 <% end %>

<%= form_with model: @list , url: '/books' , local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
 <div>
  <%= f.submit 'Create Book'%>
 </div>

<% end %>