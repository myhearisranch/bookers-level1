<p><%= flash[:notice] %></p>
<h1>Books</h1>
<table>
 <tr>
  <th width='100'>Title</th>
  <th>Body</th>
 </tr>
<% @books.each do |book| %>
<tr>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td width='30'><%= link_to "show", book_path(book.id) %></td>
 <td width='30'><%= link_to "Edit", edit_book_path(book.id)%></td>
 <td width='30'><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => 'Are you sure？' %></td>
</tr>
<% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました。
  <% @book.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
 <% end %>

<%= form_with model: @book , url: '/books' , local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>
 <div>
  <%= f.submit 'Create Book'%>
 </div>

<% end %>
